{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "command",
  "commandRunner": {
    "command": "bun test"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "thresholds": {
    "high": 90,
    "low": 80,
    "break": 70
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "stryker-tmp",
    ".stryker-tmp"
  ],
  "tsconfigFile": "tsconfig.json",
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ],
  "concurrency": 2
}
