{
  "name": "coding-standard",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/mcp/start-server.ts",
    "dev": "bun --hot run src/mcp/start-server.ts",
    "test": "NODE_ENV=test bun test",
    "test:unit": "NODE_ENV=test bun test tests/unit",
    "test:integration": "NODE_ENV=test bun test tests/integration --exclude='cache-performance-web-example.test.ts'",
    "test:performance": "NODE_ENV=test bun test tests/performance",
    "test:security": "NODE_ENV=test bun test tests/security",
    "test:coverage": "NODE_ENV=test bun test --coverage",
    "test:watch": "NODE_ENV=test bun test --watch",
    "test:e2e": "npx playwright test tests/e2e",
    "test:e2e:ui": "npx playwright test tests/e2e --ui",
    "test:e2e:debug": "npx playwright test tests/e2e --debug",
    "test:e2e:headed": "npx playwright test tests/e2e --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:validate": "npm run test && npm run test:e2e",
    "test:ci": "NODE_ENV=test npm run test --coverage && npm run test:e2e",
    "burn-in": "./scripts/cache-burn-in.sh",
    "burn-in:quick": "./scripts/cache-burn-in.sh 3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/util": "^9.3.0",
    "@types/bun": "^1.3.2",
    "semver": "^7.7.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.21.1",
    "stryker-api": "^0.24.1",
    "stryker-html-reporter": "^0.18.1",
    "stryker-typescript": "^0.18.1"
  },
  "overrides": {
    "semver": "^7.7.3",
    "@stryker-mutator/util": "^9.3.0"
  }
}
